<h2 style="padding: 30px; font-size: 45px; text-align: center;">Login</h2>

<div class="jumbotron jumbotron-fluid">
  <div>
    <form action="/auth/sign-in" method="post" id="form-container" style="margin-left: 45%;">
      <label for="username" class="lead">Username</label>
      <br>
      <input id="username" type="text" name="username" placeholder="Username">

      <br><br>

      <label for="password" class="lead">Password</label>
      <br>
      <input id="password" type="password" name="password" placeholder="Your password">
      <br>
      {{#if message }}
      <div class="error-message">{{ message }}</div>
      {{/if}}

      <br><br>

      <button class="btn my-2 my-sm-0">Login</button>
      <br>
      <p class="account-message">
        Don't have an account yet?
        <a href="/auth/sign-up">Signup</a>
      </p>
    </form>
  </div>
</div>