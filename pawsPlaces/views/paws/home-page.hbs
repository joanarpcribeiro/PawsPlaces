<section>

  <div>
    <img src="/images/P/pawss.png" alt="paws" style="position: absolute; MARGIN-LEFT: 35%; MARGIN-TOP: 5%;">
    <img src="/images/P/Hiker_with_dog.jpg" alt="Dog" width="100%" height="540px">
  </div>
  <nav class="navbar navbar-light">
    <form action="/paws/places" class="form-inline" method="POST" style="margin: auto;
    width: 70%; height: 60px;">
      <input class="form-control mr-sm-2" type="search" placeholder="Find places, restaurants, etc" aria-label="Search"
        style="width: 90%;" list="categories" name="category">
      <datalist id="categories">
        <a href="{{this.category.[0]}}"><option value="Restaurants"></a>
        <a href="{{this.category.[1]}}"><option value="Accomodation"></a>
        <a href="{{this.category.[2]}}"><option value="Garden"></a>
        <a href="{{this.category.[3]}}"><option value="Dog grooming"></a>
        <a href="{{this.category.[4]}}"><option value="Veterinarian"></a>
        <a href="{{this.category.[5]}}"><option value="Pet shop"></a>
        <a href="{{this.category.[6]}}"><option value="Public Transportation"></a>
        <a href="{{this.category.[7]}}"><option value="Veterinarian"></a>
        <a href="{{this.category.[8]}}"><option value="Hospital"></a>
        <a href="{{this.category.[9]}}"><option value="Shopping"></a>
      </datalist>
      <button class="btn my-2 my-sm-0" type="submit"
        style="width: 8%; border: 1px solid rgb(161, 138, 138);">Search</button>
    </form>
  </nav>
</section>

<section>
  {{!-- PLACES --}}


  {{!-- PLACES  --}}
  {{#each places}}
  <div class=" col-md-6"
    style="background-color: rgb(219, 219, 219); width: 31%; margin:20px; height: 500px; display:inline-block;">
    <img class="card-img-top" src="{{this.pictureURL}}" style="width: 100%; height: 80%" alt="">
    <div class="card-body">
      <h5><a href="/auth/places" class="btn btn-dark">{{this.name}}</a></h5>
      <p class="card-text">{{this.neighbourhood}}</p>
    </div>
  </div>
  {{/each}}
</section>

<footer>

  <a href="/auth/about-us" class="text-decoration-none" style="color:black;">About us</a>
</footer>